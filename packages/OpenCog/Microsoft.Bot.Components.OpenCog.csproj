<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>Microsoft.Bot.Components.OpenCog</PackageId>
    <AssemblyName>Microsoft.Bot.Components.OpenCog</AssemblyName>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageDescription>OpenCog autonomous orchestrator for cognitive synergy architecture in Bot Framework</PackageDescription>
    <PackageTags>bot;botframework;opencog;cognitive;orchestrator;ai</PackageTags>
    <Authors>Microsoft</Authors>
    <Company>Microsoft</Company>
    <Product>Bot Framework</Product>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Microsoft/botframework-components</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Microsoft/botframework-components</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <NoWarn>$(NoWarn);SA1412;SA1402;SA1116;SA1117;SA1513;SA1108;SA1119;SA1407;SA1623;SA1201;SA1516;SA1500;CA1001;CA2227;CS1998</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Bot.Builder" Version="4.20.0" />
    <PackageReference Include="Microsoft.Bot.Builder.Dialogs.Adaptive" Version="4.20.0" />
    <PackageReference Include="Microsoft.Bot.Builder.Dialogs.Declarative" Version="4.20.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="7.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="AdaptiveExpressions" Version="4.20.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="**/*.schema" />
    <None Include="**/*.dialog" />
    <None Include="**/*.lu" />
    <None Include="**/*.lg" />
  </ItemGroup>

</Project>